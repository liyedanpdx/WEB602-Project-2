    -data = data || {}

    if errors && errors.length
        ul.my-errors
            each error in errors
                li= error.msg
                
    h1.headline-container
        strong.register-headline Register to subscribe

    form(action="/register" method="POST" class="form-registration")
        label(for="username") Username:
        input(
            type="text"
            id="username"
            name="username"
            class="form-control"
            value=data.username
        )

        label(for="password") Password:
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
        )

        label(for="email") Email:
        input(
            type="email"
            id="email"
            name="email"
            class="form-control"
            value=data.email
        )

        label(for="phone") Phone:
        input(
            type="tel"
            id="phone"
            name="phone"
            class="form-control"
            value=data.phone
        )

        input(
            type="submit" 
            value="Submit"
            class="btn btn-lg btn-primary btn-block submit-buttton"
        )
